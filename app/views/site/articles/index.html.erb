<div class="container">
<section class="content-header">
  <h1>
    <% article_category = ArticleCategory.find(params[:q][:article_category_id_eq]) if params[:q][:article_category_id_eq].present? %>
    <%= article_category.present? ? article_category.name : '资讯' %>
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to root_path do %>
        <i class="fa fa-home"></i> 首页
      <% end %>
    </li>
    <li class="active">
      <%= article_category.present? ? article_category.name : '资讯' %>
    </li>
  </ol>
</section>

<section class="content">
  <% if flash[:notice] %>
  <div class="alert alert-info alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <%= flash[:notice] %>
  </div>
<% end %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">
            标题
          </h3>

          <div class="box-tools">

          </div>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <% @articles.each do |article| %>
            <tr>
              <td>
                <%= link_to article.title, article_path(article.id) %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
        <%= paginate @articles, views_prefix: 'admin' %>
      </div>
    </div>
  </div>
</section>
</div>
