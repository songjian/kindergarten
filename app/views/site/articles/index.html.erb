<div class="container">
<section class="content-header">
  <h1>
    <% article_category = ArticleCategory.find(params[:article_category]) if params[:article_category].present? %>
    <%= article_category.present? ? article_category.name : '资讯' %>
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_path do %>
        <i class="fa fa-home"></i> 首页
      <% end %>
    </li>
    <li class="active">资讯</li>
  </ol>
</section>

<section class="content">
  <% if flash[:notice] %>
  <div class="alert alert-info alert-dismissible">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <%= flash[:notice] %>
  </div>
<% end %>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">
          </h3>

          <div class="box-tools">

            <%= search_form_for [:admin, @q] do |f| %>
              <div class="input-group input-group-sm" style="width: 150px;">
                <%= f.search_field :title_cont, class: 'form-control pull-right', placeholder: '资讯标题' %>

                <div class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>标题</th>
            </tr>
            <% @articles.each do |article| %>
            <tr>
              <td>
                <%= link_to article.title, article_path(article.id) %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
        <%= paginate @articles, views_prefix: 'admin' %>
      </div>
    </div>
  </div>
</section>
</div>
