<section class="content-header">
  <h1>
    园长和教师管理
    <small></small>
  </h1>
  <ol class="breadcrumb">
    <li>
      <%= link_to admin_path do %>
        <i class="fa fa-home"></i> 首页
      <% end %>
    </li>
    <li>园长和教师管理</li>
    <li class="active">列表</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">
            <div class="btn-group">
              <%= link_to '新增', new_admin_user_path, class: 'btn btn-default btn-xs' %>
            </div>
          </h3>

          <div class="box-tools">

            <%= search_form_for [:admin, @q] do |f| %>
              <div class="input-group input-group-sm" style="width: 150px;">
                <%= f.search_field :name_cont, class: 'form-control pull-right', placeholder: '请输入姓名' %>

                <div class="input-group-btn">
                  <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>姓名</th>
              <th>英文姓名</th>
              <th>职务</th>
              <th>国籍</th>
              <th>联系电话</th>
              <th>操作</th>
            </tr>
            <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.english_name %></td>
              <td><%= user.user_position.name %></td>
              <td><%= user.nationality %></td>
              <td><%= user.contact_phone %></td>
              <td>
                <%= link_to edit_admin_user_path(user), class: 'btn btn-primary btn-xs' do %>
                  <i class="fa fa-edit"></i> 编辑
                <% end %>
              </td>
            </tr>
            <% end %>
          </table>
        </div>
        <!-- /.box-body -->
        <%= paginate @users, views_prefix: 'admin' %>
      </div>
      <!-- /.box -->
    </div>
  </div>
</section>
